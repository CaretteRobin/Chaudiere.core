<header class="bg-white relative">
    <div class="container mx-auto px-6 py-5 flex justify-between items-center">
        <a href="{{ url_for('home') }}" class="text-2xl font-extrabold text-purple-700 tracking-tight hover:text-purple-900 transition">
            LaChaudière Agenda
        </a>

        <nav>
            <ul class="flex space-x-6 text-gray-700 font-medium">

                {% if user %}
                    <li><a href="{{ url_for('home') }}" class="hover:text-purple-600 transition">Accueil</a></li>
                    <li><a href="/categories" class="hover:text-purple-600 transition">Catégories</a></li>
                    <li><a href="/evenements" class="hover:text-purple-600 transition">Événements</a></li>
                    {% if user.role == 'super-admin' %}
                        <li><a href="/users" class="text-pink-400 hover:text-pink-600 transition">Administration</a></li>
                    {% endif %}
                    <li>
                        <a href="{{ url_for('logout') }}" class="text-red-500 hover:text-red-700 transition">
                            Déconnexion
                        </a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ url_for('auth_page') }}" class="text-purple-600 hover:text-purple-800 transition">
                            Connexion / Inscription
                        </a>
                    </li>
                {% endif %}
            </ul>
        </nav>
    </div>
    <span class="absolute top-[1em] left-[1em] cursor-pointer bg-purple-100 hover:bg-purple-200 text-purple-800 font-medium py-2 px-4 rounded-lg text-center shadow transition uppercase">Backend</span>
</header>
