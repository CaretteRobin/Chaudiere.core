{% extends "layout.twig" %}

{% block title %}Connexion / Inscription - LaChaudiere App{% endblock %}

{% block content %}
    <div class="max-w-2xl mx-auto bg-white shadow-xl rounded-xl p-8 mt-12">
        <h1 class="text-3xl font-bold text-purple-700 mb-6 text-center">Connexion</h1>

        <div class="flex flex-col gap-8">
            <form method="POST" action="{{ url_for('auth_login') }}" class="space-y-4">
                <div>
                    <label for="signin-email" class="block text-sm font-medium text-purple-700 mb-2">Email :</label>
                    <input type="email" id="signin-email" name="email" placeholder="Entrez votre email"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
                           required>
                </div>
                <div>
                    <label for="signin-password" class="block text-sm font-medium text-purple-700 mb-2">Mot de passe
                        :</label>
                    <input type="password" id="signin-password" name="password"
                           placeholder="Entrez votre mot de passe"
                           class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500"
                           required>
                </div>
                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                <button type="submit"
                        class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-lg text-center shadow transition">
                    Se connecter
                </button>
            </form>
        </div>
    </div>
{% endblock %}
