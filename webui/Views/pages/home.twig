{# webui/Views/pages/home.twig #}
{% extends "layout.twig" %}

{% block title %}Bienvenue sur LaChaudiereAgenda{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-12">
        <h1 class="text-4xl font-bold text-center text-gray-800 mb-8">Bienvenue sur LaChaudiereAgenda</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Bloc Actions -->
            <div class="bg-white rounded-lg shadow-lg p-8 flex flex-col items-center">
                <h2 class="text-2xl font-semibold mb-6 text-gray-700">Actions rapides</h2>
                <a href="/categories" class="w-full mb-3 bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 transition text-center">Voir les catégories</a>
                <a href="/categories/create" class="w-full mb-3 bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition text-center">Ajouter une catégorie</a>
                <a href="/evenements" class="w-full mb-3 bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition text-center">Voir les événements</a>
                <a href="/evenements/create" class="w-full bg-teal-600 text-white py-2 px-4 rounded-md hover:bg-teal-700 transition text-center">Ajouter un événement</a>
            </div>
            <!-- Bloc Catégories -->
            <div class="bg-white rounded-lg shadow-lg p-8">
                <h2 class="text-2xl font-semibold mb-6 text-gray-700">Liste des catégories</h2>
                <ul>
                    {% for cat in categories %}
                        <li class="mb-4 p-4 border rounded">
                            <strong class="block text-lg text-indigo-700">{{ cat.name|e }}</strong>
                            {% if cat.description %}
                            {% endif %}
                                <div class="text-gray-500 mt-2" style="white-space: pre-line;">{{ cat.description|e }}</div>
                        </li>
                    {% else %}
                        <li class="text-gray-400">Aucune catégorie enregistrée.</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}