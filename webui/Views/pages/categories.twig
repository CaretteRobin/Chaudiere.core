{% extends "layout.twig" %}

{% block title %}Catégories - LaChaudiereAgenda{% endblock %}

{% block content %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Liste des catégories</h1>
        <div class="bg-white rounded-lg shadow-lg p-8">
            <ul class="space-y-6">
                {% for cat in categories %}
                    <li class="border rounded-md p-6">
                        <strong class="block text-xl text-indigo-700 mb-2">{{ cat.name|e }}</strong>
                        {% if cat.description %}
                            <div class="text-gray-600" style="white-space: pre-line;">{{ cat.description|e }}</div>
                        {% endif %}
                    </li>
                {% else %}
                    <li class="text-gray-400">Aucune catégorie enregistrée.</li>
                {% endfor %}
            </ul>
            <div class="mt-8 text-center">
                <a href="/categories/create" class="inline-block bg-green-600 text-white py-2 px-6 rounded-md hover:bg-green-700 transition">Ajouter une catégorie</a>
            </div>
        </div>
    </div>
{% endblock %}