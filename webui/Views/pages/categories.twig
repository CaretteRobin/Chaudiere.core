{% extends "layout.twig" %}

{% block title %}Catégories - LaChaudiereAgenda{% endblock %}

{% block content %}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 m-72">

        <!-- Bloc Catégories -->
        <div class="bg-white rounded-lg shadow-lg p-8">
            <h2 class="text-2xl font-semibold mb-6 text-gray-700">Liste des catégories</h2>
            <ul>
                {% for cat in categories %}
                    <li class="mb-4 p-4 border rounded">
                        <strong class="block text-lg text-indigo-700">{{ cat.name|e }}</strong>
                        {% if cat.description %}
                        {% endif %}
                        <div class="text-gray-500 mt-2" style="white-space: pre-line;">{{ cat.description|e }}</div>
                    </li>
                {% else %}
                    <li class="text-gray-400">Aucune catégorie enregistrée.</li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}