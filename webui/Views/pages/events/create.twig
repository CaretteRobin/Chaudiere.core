{% extends "layout.twig" %}

{% block title %}Créer un événement – LaChaudière Agenda{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto bg-white shadow-xl rounded-xl p-8 mt-12">
    <h1 class="text-3xl font-bold text-purple-700 mb-6 text-center">Créer un événement</h1>

    <form method="post" action="{{ url_for('events.create.handle') }}" class="space-y-6">
        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

        <div>
            <label class="block text-sm font-medium text-gray-700">Titre</label>
            <input type="text" name="title" required
                   class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700">Description (Markdown)</label>
            <textarea name="description" rows="5"
                      class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500"></textarea>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Prix (€)</label>
                <input type="number" step="0.01" name="price"
                       class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Heure (optionnelle)</label>
                <input type="time" name="time"
                       class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
            </div>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div>
                <label class="block text-sm font-medium text-gray-700">Date de début</label>
                <input type="date" name="start_date"
                       class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700">Date de fin (optionnelle)</label>
                <input type="date" name="end_date"
                       class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
            </div>
        </div>

        <div>
            <label class="block text-sm font-medium text-gray-700">Catégorie</label>
            <select name="category_id"
                    class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
                {% for category in categories %}
                    <option value="{{ category.id }}">{{ category.name }}</option>
                {% endfor %}
            </select>
        </div>

        <!-- Champ image_url -->
        <div>
            <label class="block text-sm font-medium text-gray-700">Image (URL, optionnelle)</label>
            <input type="url" name="image_url" placeholder="https://exemple.com/image.jpg"
                class="mt-1 w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-purple-500 focus:border-purple-500">
        </div>

        <div>
            <button type="submit"
                    class="w-full bg-purple-600 hover:bg-purple-700 text-white font-medium py-2 px-4 rounded-md transition">
                Créer l’événement
            </button>
        </div>
    </form>
    </div>
{% endblock %}
