{% extends "layout.twig" %}

{% block title %}Liste des événements{% endblock %}

{% block content %}
    <div class="container mx-auto py-8">
        <h1 class="text-2xl font-bold mb-6">Liste des événements</h1>

        <form method="GET" class="mb-4"> <label for="category" class="mr-2 font-semibold">Filtrer par catégorie :</label>
            <select name="category" id="category" onchange="this.form.submit()" class="border p-1 rounded">
                <option value="">Toutes</option> {% for category in categories %}
                    <option value="{{ category.id }}" {% if category.id == selectedCategory|default(null) %}selected{% endif %}> {{ category.name }} </option> {% endfor %}
            </select>
        </form>

        {% if events is not empty %}
            <table class="w-full border">
                <thead class="bg-gray-100">
                <tr>
                    <th class="p-2 text-left">Titre</th>
                    <th class="p-2 text-left">Date</th>
                    <th class="p-2 text-left">Catégorie</th>
                    <th class="p-2 text-left">Publié</th>
                </tr>
                </thead>
                <tbody>
                {% for event in events %}
                    <tr class="border-t">
                        <td class="p-2">{{ event.title }}</td>
                        <td class="p-2">{{ event.start_date|date('d/m/Y') }}</td>
                        <td class="p-2">{{ event.category.name ?? 'N/A' }}</td>
                        <td class="p-2">
                            <form method="POST" action="/admin/evenements/{{ event.id }}/toggle-publish">
                                <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                                <button class="text-sm bg-gray-200 rounded px-2 py-1 hover:bg-gray-300" type="submit">
                                    {% if event.is_published %}
                                        ✅ Dépublier
                                    {% else %}
                                        ❌ Publier
                                    {% endif %}
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Aucun événement pour le moment.</p>
        {% endif %}
    </div>
{% endblock %}
