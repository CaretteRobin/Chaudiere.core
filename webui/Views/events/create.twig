{% extends "layout.twig" %}

{% block title %}Créer un événement{% endblock %}

{% block content %}
<div class="container mx-auto py-8">
    <h1 class="text-2xl font-bold mb-6">Créer un événement</h1>

    <form method="post" action="{{ url_for('events.create.handle') }}" class="space-y-4">
        {# Champs CSRF obligatoires pour validation #}
        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">


        <div>
            <label class="block">Titre</label>
            <input type="text" name="title" class="w-full border p-2" required>
        </div>

        <div>
            <label class="block">Description (Markdown)</label>
            <textarea name="description" class="w-full border p-2" rows="6"></textarea>
        </div>

        <div>
            <label class="block">Prix (€)</label>
            <input type="number" step="0.01" name="price" class="w-full border p-2">
        </div>

        <div>
            <label class="block">Date de début</label>
            <input type="date" name="start_date" class="w-full border p-2">
        </div>

        <div>
            <label class="block">Date de fin (optionnelle)</label>
            <input type="date" name="end_date" class="w-full border p-2">
        </div>

        <div>
            <label class="block">Heure (optionnelle)</label>
            <input type="time" name="time" class="w-full border p-2">
        </div>

        <div>
            <label class="block">Catégorie</label>
            <select name="category_id" class="w-full border p-2">
                {% for category in categories %}
                    <option value="{{ category.id }}">{{ category.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div>
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Créer</button>
        </div>
    </form>
</div>
{% endblock %}
